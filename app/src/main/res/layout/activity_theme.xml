<?xml version="1.0" encoding="utf-8"?>

<TableLayout
    android:layout_width="372dp"
    android:layout_height="252dp"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <ImageButton
            android:layout_width="186dp"
            android:layout_height="126dp"
            android:id="@+id/imageButtonSpace"
            android:layout_column="0"
            android:background="@drawable/space_small" />

        <ImageButton
            android:layout_width="186dp"
            android:layout_height="126dp"
            android:id="@+id/imageButtonFlower"
            android:layout_column="1"
            android:background="@drawable/flower_small" />
    </TableRow>

    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <ImageButton
            android:layout_width="186dp"
            android:layout_height="126dp"
            android:id="@+id/imageButtonConfetti"
            android:layout_column="0"
            android:background="@drawable/confetti_small" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageButtonSuperman"
            android:background="@drawable/superman_small" />
    </TableRow>

</TableLayout>