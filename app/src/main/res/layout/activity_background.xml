<?xml version="1.0" encoding="utf-8"?>

<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <Button
            android:layout_width="74dp"
            android:layout_height="wrap_content"
            android:id="@+id/buttonBlue"
            android:layout_weight="0.04"
            android:background="#ff1c49ff"
            android:text="blue"
            android:textColor="#ff1c49ff"
            android:visibility="visible"/>
    </TableRow>

    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <Button
            android:layout_width="74dp"
            android:layout_height="wrap_content"
            android:id="@+id/buttonLightBlue"
            android:layout_weight="0.04"
            android:background="#1dd2ff"
            android:text="lightblue"
            android:textColor="#1dd2ff"/>
    </TableRow>

    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <Button
            android:layout_width="74dp"
            android:layout_height="wrap_content"
            android:id="@+id/buttonWhite"
            android:layout_weight="0.04"
            android:background="#ffffff"
            android:text="white"
            android:textColor="#ffffff"/>
    </TableRow>

    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <Button
            android:layout_width="74dp"
            android:layout_height="wrap_content"
            android:id="@+id/buttonRed"
            android:layout_weight="0.06"
            android:background="#ff1c49"
            android:text="red"
            android:textColor="#ff1c49"/>
    </TableRow>

    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <Button
            android:layout_width="74dp"
            android:layout_height="wrap_content"
            android:id="@+id/buttonYellow"
            android:layout_weight="0.06"
            android:background="#fffc49"
            android:text="yellow"
            android:textColor="#fffc49"/>
    </TableRow>

    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <Button
            android:layout_width="74dp"
            android:layout_height="wrap_content"
            android:id="@+id/buttonLightGreen"
            android:layout_weight="0.04"
            android:background="#55ff5c"
            android:text="lightgreen"
            android:textColor="#55ff5c"/>
    </TableRow>

    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <Button
            android:layout_width="74dp"
            android:layout_height="wrap_content"
            android:id="@+id/buttonGreen"
            android:layout_weight="0.04"
            android:background="#19aa07"
            android:text="green"
            android:textColor="#19aa07"/>
    </TableRow>

    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <Button
            android:layout_width="74dp"
            android:layout_height="wrap_content"
            android:id="@+id/buttonOrange"
            android:layout_weight="0.04"
            android:background="#ff6a31"
            android:text="orange"
            android:textColor="#ff6a31"/>
    </TableRow>

    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <Button
            android:layout_width="74dp"
            android:layout_height="wrap_content"
            android:id="@+id/buttonPink"
            android:layout_weight="0.04"
            android:background="#ff1fe9"
            android:text="pink"
            android:textColor="#ff1fe9"/>
    </TableRow>

    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <Button
            android:layout_width="74dp"
            android:layout_height="wrap_content"
            android:id="@+id/buttonPurple"
            android:layout_weight="0.04"
            android:background="#b166ff"
            android:text="purple"
            android:textColor="#b166ff"/>
    </TableRow>

</TableLayout>